<div>
    <main>
        {{#with main}}
        <section>
            {{>title data="Work history" big=true}}
            <div>
                <ul>
                    {{#each work}}
                    <li>
                        <div>{{position}}</div>
                        <br>
                        <div>{{duration.from}} - {{#if duration.to}} {{duration.to}} {{else}} (still working) {{/if}}
                        </div> <br>
                        <div>
                            {{#if company.url}}
                            {{>link text=company.name href=company.url noLine=true}}
                            {{else}}
                            <b>{{company.name}}</b>
                            {{/if}}
                        </div>
                        <br>
                    </li>
                    {{/each}}
                </ul>
            </div>
        </section>
        <hr>
        <section>
            {{>title data="My projects" big=true}}
            <ul>
                {{#each projects}}
                <li>
                    <div>
                        {{>link text="GitHub" href=github noLine=true blank=true}}
                    </div>
                    <div>
                        {{>title data=name}}
                    </div>
                    <div>
                        <p>
                            {{about}}
                        </p>
                    </div>
                    <div>
                        <em>
                            Project stacks ({{stackAmount}})
                        </em>
                    </div>
                    <br>
                    <div>
                        <ul>
                            {{#each stacks}}
                            <li>
                                {{name}}
                            </li>
                            {{/each}}
                        </ul>
                    </div>
                    <br>
                    <div>
                        <em>
                            Project awards
                        </em>
                    </div>
                    <br>
                    <div>
                        <ul>
                            {{#each awards}}
                            <li>
                                {{name}}
                            </li>
                            {{/each}}
                        </ul>
                    </div>
                    <br>
                </li>
                {{/each}}
            </ul>
        </section>
        {{/with}}
    </main>
</div>